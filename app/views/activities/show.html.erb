<div class="container mt-4">
  <div class="row">
  <div class="col mb-3" style="background-color: white;">
    <h1><%= @activity.title %></h1>
    <%= render('shared/rating_star') * 5 %>
  </div>
 </div>
  <div class="d-flex">
    <%= cl_image_tag(@activity.photo.key, class: "main-pic") %>
    <div class=" d-flex flex-wrap">

    </div>
  </div>
  <div>
    <a class="btn btn-cat4" href="#">5-15 anos</a>
    <a class="btn btn-cat5" href="#">Aniversario</a>
  </div>
  <h4>Descrição</h4>
  <%= @activity.description %>
  <hr>
  <h4>Categoria</h4>
  <%= @activity.category %>
  <hr>
  <h4>Duração</h4>
  <%= @activity.duration %>
  <hr>
  <h4>Idade Mínima</h4>
  <%= @activity.min_age%>
  <hr>
  <h4>Preço</h4>
  <%= @activity.price%>
  <hr>
  <%= simple_form_for([@activity, @order]) do |f| %>
    <%= f.submit %>
  <% end %>
</div>
