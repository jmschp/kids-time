<div class="card-trip mb-4">
  <% if act_photo %>
    <%= cl_image_tag(act_photo)%>
  <% else %>
    <%= image_tag('placeholder.png') %>
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= title %></h2>
      <p><%= category %></p>
    </div>
    <h2 class="card-trip-pricing">R$ <%= price %></h2>
    <% if act_user_photo %>
      <%= cl_image_tag(act_user_photo, class: "card-trip-user avatar-bordered") %>
    <% else %>
      <%= image_tag('avatar.png', class: "card-trip-user avatar-bordered") %>
    <% end %>
  </div>
</div>
