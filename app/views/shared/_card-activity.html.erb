<div class="card-trip">
  <% if activity.photos.present? %>
    <div class='cardActivityCarousel images-carousel'>
      <% activity.photos.each do |photo| %>
        <%= cl_image_tag(photo.key, :width=>300, :height=>250, :gravity=>"faces", :crop=>"fill")%>
      <% end %>
    </div>
  <% else %>
    <%= image_tag('placeholder.png') %>
  <% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= activity.title %></h2>
      <%= render("shared/category-badge", category: activity.category) %>
      <div>
        <i class="fas fa-edit"></i>
        <i class="fas fa-trash-alt"></i>
      </div>
    </div>
    <h2 class="card-trip-pricing"><%= number_to_currency(activity.price, unit: "R$ ", separator: ",", delimiter: "") %></h2>
    <% if activity.user.photo.present? %>
      <%= cl_image_tag(activity.user.photo.key, class: "card-trip-user avatar-bordered") %>
    <% else %>
      <%= image_tag('avatar.png', class: "card-trip-user avatar-bordered") %>
    <% end %>
  </div>
</div>
