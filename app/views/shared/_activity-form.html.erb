<%= simple_form_for(activity) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category, collection: ACTIVITY_CATEGORIES %>
    <%= f.input :duration %>
    <%= f.input :min_age %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
<% end %>
