<div class= "container bg-info" >
  <div class="row justify-content-center">
    <div class="bg-light col-6 my-4 py-4" style= "border-radius: 10px;">
      <h4 style="margin-bottom: 15px; text-align: center;">Detalhes da Atividade</h4>
      <%= simple_form_for(activity) do |f| %>
      <div>
        <%= f.input :category, label:"Categoria", collection: ACTIVITY_CATEGORIES %>
      </div>
      <div class= "d-flex justify-content" style= "justify-content:space-between;">
        <%= f.input :title, label:"Título" %>
        <%= f.input :min_age, label:"Idade mínima" %>
      </div>
        <%= f.input :description, label:"Descrição" %>
      <div class= "d-flex justify-content" style= "justify-content:space-between;">
        <%= f.input :duration, label:"Duração" %>
        <%= f.input :price, label:"Preço" %>
      </div>
      <div>
        <%= f.input :photo, label:"Foto", as: :file %>
      </div>
      <div class="form-actions">
        <%= f.submit "Submeter", class: 'btn btn-create btn-block mt-4' %>
      </div>
      <% end %>
    </div>
</div>
</div>
