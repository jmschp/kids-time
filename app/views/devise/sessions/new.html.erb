<div class="banner flexbox" style="background:white">
  <div class="col-sm-6">
    <%= render "pages/logintxt" %>
  </div>
  <div class="container_custom col-sm-6">
    <div class="row my-5 ">
      <div class= "col-6 text-left border-bottom border-info">
        <%= link_to "Login", new_session_path(resource_name), class: 'text-dark' %>
      </div>
      <div class="col-6 text-right border-bottom">
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-secondary' %>
      </div>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-dark' %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn-signin btn-block' %>
      </div>
    <% end %>

  </div>
</div>
