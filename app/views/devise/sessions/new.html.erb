<div class="login-page-content">
  <div class="container login-form-layout">
    <div class="d-flex justify-content-between">
      <h4 class="sing-in-link-active"><%= link_to "Sign in", new_session_path(resource_name) %></h4>
      <h4 class="sign-up-link-inactive"><%= link_to "Sign up", new_registration_path(resource_name) %></h4>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div>
        <%= link_to("Forgot your password?", new_password_path(resource_name), class: 'text-dark') %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
